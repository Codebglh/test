{
    "name": "My Homepage Plugin",
    "version": "1.0",
    "description": "A simple plugin to display a random image and a clock on the browser homepage.",
    "manifest_version": 3,
    "icons": {
      "16": "icon/16.png",
      "32": "icon/32.png",
      "48": "icon/48.png",
      "64": "icon/64.png",
      "128": "icon/128.png"
    },
    "action": {
      "default_icon": "icon/48.png",
      "default_title": "My Homepage Plugin",
      "default_popup": "./html/popup.html"
    },
    "permissions": [
      "tabs"
    ],
    "chrome_url_overrides": {
      "newtab": "./html/index.html"
    },
    "options_ui": {
        "page": "./html/options.html",
        "open_in_tab": true
      }
  }
  